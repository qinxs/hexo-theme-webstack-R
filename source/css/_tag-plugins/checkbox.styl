label
  position: relative
  width: 2em
  height: 1em
  background: #777
  border-radius: .5em
  transition: background .3s
  cursor: pointer

label[disabled]
  cursor: not-allowed
  opacity: .5

label::after
  transition: all .3s
  position: absolute

label::after
  content: ''
  top: 1px
  left: 1px
  width: calc(1em - 2px)
  height: calc(1em - 2px)
  border-radius: 50%
  background: white

input[type="checkbox"]:checked + label
  background: limegreen

input[type="checkbox"]:checked + label::after
  left: calc(1em + 1px)
